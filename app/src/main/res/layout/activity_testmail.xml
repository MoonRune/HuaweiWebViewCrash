<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/mail_header"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_mail_theme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="16dp"
                    android:paddingRight="15dp"
                    android:textColor="#333333"
                    android:textSize="18sp" />

                <RelativeLayout
                    android:id="@+id/layout_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginLeft="19dp">

                    <LinearLayout
                        android:id="@+id/layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="17dp"
                        android:gravity="right">

                        <ImageView
                            android:id="@+id/iv_star"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:visibility="gone" />

                        <!--                        <TextView
                                                    android:id="@+id/tv_show"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginLeft="3dp"
                                                    android:text="详情"
                                                    android:textColor="#00bbff"
                                                    android:textSize="14sp" />-->
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_show"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="30dp"
                        android:text="详情"
                        android:textColor="#00bbff"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_mail_send_peo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="60dp"
                        tools:text="akdjhaas22222222222222222222222222222222222222222222222222d"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_mail_send_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/tv_mail_send_peo"
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/iv_attachment"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@id/tv_mail_send_peo"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="19dp"
                    android:layout_marginTop="0dp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="发件人："
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_from_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/tv1"
                        android:textColor="#333333"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_from_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_from_name"
                        android:layout_toRightOf="@id/tv1"
                        android:textColor="#999999"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_from_email"
                        android:layout_marginTop="8dp"
                        android:text="收件人："
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_to_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_from_email"
                        android:layout_marginTop="8dp"
                        android:layout_toRightOf="@id/tv2"
                        android:textColor="#333333"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_to_name"
                        android:layout_marginTop="8dp"
                        android:text="抄    送："
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_cc_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_to_name"
                        android:layout_marginTop="8dp"
                        android:layout_toRightOf="@id/tv5"
                        android:textColor="#333333"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_cc_name"
                        android:layout_marginTop="8dp"
                        android:text="时    间："
                        android:textColor="#666666"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_email_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_cc_name"
                        android:layout_marginTop="8dp"
                        android:layout_toRightOf="@id/tv3"
                        android:textColor="#333333"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:id="@+id/layout1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/tv_email_time"
                        android:layout_marginRight="17dp"
                        android:gravity="right">

                        <ImageView
                            android:id="@+id/iv_star2"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_dismiss"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text="隐藏"
                            android:textColor="#00bbff"
                            android:textSize="14sp"
                            android:visibility="gone" />
                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv3"
                    android:layout_marginTop="8dp"
                    android:text="附    件："
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <ListView
                    android:id="@+id/listview_attr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv3"
                    android:layout_toRightOf="@id/tv4"
                    android:background="@color/white" />
            </LinearLayout>

            <TextView
                android:id="@+id/mail_header_line"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#d3d6d9" />

            <WebView
                android:id="@+id/mail_webView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>